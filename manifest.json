{
    "manifest_version": 2,
    "name": "Assetic Field Finder",
    "description": "Helps you find fields in the register",
    "version": "1.1",
    "page_action": {
        "default_icon": "icon-19.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon-128.png",
        "128": "icon-128.png"
    },
    "content_scripts": [{
        "matches": [
            "https://*.assetic.net/*"
        ],
        "all_frames": true,
        "js": [
            "plugins/jquery-3.1.1.min.js",
            "scripts/spinloader.js",
            "scripts/content.js"
        ],
        "run_at": "document_end"
    }],

    "background": {
        "scripts": [
            "scripts/content.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "declarativeContent",
        "activeTab",
        "tabs",
        "https://ajax.googleapis.com/",
        "https://*.assetic.net/"
    ],
    "web_accessible_resources": [
        "scripts/pageScript.js"
    ]
}